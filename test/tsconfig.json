{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "inlineSourceMap": true,
    "outDir": ".",
    "baseUrl": "."
  },
  "include": [
    "./*.test.(js|ts)"
  ],
  "exclude": [
    "../node_modules",
    "../**/dist",
    "../**/*.spec.ts"
  ]
}